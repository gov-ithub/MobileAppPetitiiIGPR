<resources>

    <style name="Theme.Police.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="politiaromana_StepIndicator">@style/Widget.Police.StepIndicator</item>
        <item name="politiaromana_StepIndicator.Step">@style/Widget.Police.StepIndicator.Step</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Theme.Police" parent="Theme.Police.Base">
        <item name="android:windowBackground">@color/window_bg</item>
    </style>

    <style name="Theme.Police.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Police.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Police.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextAppearance.Police.TextInputLayout.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearance.Police.TextInputLayout.Error</item>
    </style>

    <style name="TextAppearance.Police.TextInputLayout.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/disabledTextColor</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="TextAppearance.Police.TextInputLayout.Error" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/app_text_size_xsmall</item>
    </style>

    <style name="Widget.Police.StepIndicator" parent="None">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Police.StepIndicator.Step" parent="None">
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_police_blue_white_selector</item>
        <item name="android:background">@drawable/circle_dark_blue_fill_selector</item>
    </style>

    <style name="Widget.Police.StepIndicator.Label" parent="None">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_police_blue</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
    </style>

    <style name="None" />

</resources>
